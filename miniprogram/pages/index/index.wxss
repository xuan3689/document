.canteen-list {
  padding: 20rpx;
}

.canteen-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.canteen-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  object-fit: cover;
}

.canteen-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.canteen-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  max-width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.canteen-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-open {
  background: #e8f5e9;
  color: #4caf50;
}

.status-closed {
  background: #ffebee;
  color: #f44336;
}

.canteen-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.canteen-name-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.canteen-details {
  margin: 16rpx 0;
}
