.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0 40rpx
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  background-color: transparent;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 0 32rpx;
}

.nickname-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}