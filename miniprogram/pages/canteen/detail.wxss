.container {
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
}

.error {
  text-align: center;
  padding: 40rpx;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #1aad19;
  color: white;
}

.canteen-header {
  position: relative;
  height: 400rpx;
}

.canteen-image {
  width: 100%;
  height: 100%;
}

.canteen-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  color: white;
}

.canteen-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.canteen-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-open {
  background-color: #1aad19;
  color: white;
}

.status-closed {
  background-color: rgba(0,0,0,0.5);
  color: white;
}

.crowdedness-info {
  margin: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 12rpx;
}

.crowdedness-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.crowdedness-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.crowdedness-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.crowdedness-item .label {
  color: #666;
  font-size: 26rpx;
}

.crowdedness-item .value {
  font-size: 26rpx;
}

.crowdedness-item .value.crowded {
  color: #ff4d4f;
}

.crowdedness-progress {
  margin-top: 10rpx;
}

.info-card {
  margin: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 12rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 12rpx;
  color: #666;
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.windows-section {
  margin: 20rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.windows-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.window-item {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.window-image {
  width: 200rpx;
  height: 200rpx;
}

.window-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}

.window-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.window-name {
  font-size: 30rpx;
  font-weight: bold;
}

.window-status {
  font-size: 24rpx;
  color: #1aad19;
}

.window-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.queue-info,
.wait-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666;
  font-size: 24rpx;
}