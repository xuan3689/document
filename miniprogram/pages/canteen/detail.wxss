.container {
  padding: 0 0 20rpx 0;
  background: var(--background);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  animation: rotate 1s linear infinite;
}

.error {
  padding: 40rpx;
  text-align: center;
  color: var(--danger-color);
}

.retry-btn {
  margin-top: 20rpx;
  background: var(--primary-color);
  color: #fff;
  transition: var(--transition);
}

.retry-btn:active {
  opacity: 0.8;
}

.window-header {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: var(--card-shadow);
}

.window-image {
  width: 100%;
  height: 100%;
  transition: var(--transition);
}

.window-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
}

.window-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.window-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  transition: var(--transition);
}

.status-open {
  background: var(--primary-color);
}

.status-closed {
  background: var(--text-light);
}

.info-card {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition);
}

.info-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 12rpx;
  color: var(--text-secondary);
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  transition: var(--transition);
}

.windows-section {
  margin: 20rpx;
  padding: 0 10rpx;
}

.section-header {
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
}

.windows-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 20rpx;
}

.window-item {
  position: relative;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.window-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.window-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.window-info {
  position: relative;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: #fff;
}

.window-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.window-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.window-status {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: normal;
  white-space: nowrap;
}

.window-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.queue-info,
.wait-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--text-secondary);
  font-size: 24rpx;
}