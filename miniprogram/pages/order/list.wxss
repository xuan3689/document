.container {
  padding: 20rpx;
  background-color: var(--background);
  min-height: 100vh;
}

.order-list {
  margin-bottom: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition);
}

.order-item:active {
  transform: scale(0.98);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-time {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  transition: var(--transition);
}

.status-pending {
  background-color: #fff3e0;
  color: #ff9800;
}

.status-paid {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.status-preparing {
  background-color: #e3f2fd;
  color: #2196f3;
}

.status-ready {
  background-color: #f3e5f5;
  color: #9c27b0;
}

.status-completed {
  background-color: #e8eaf6;
  color: #3f51b5;
}

.status-cancelled {
  background-color: var(--background);
  color: var(--text-light);
}

.order-content {
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  padding: 16rpx 0;
}

.window-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.window-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
}

.order-amount {
  font-size: 32rpx;
  color: var(--danger-color);
  font-weight: bold;
}

.dishes-info {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.first-dish {
  margin: 0 10rpx;
}

.more-dishes {
  color: var(--text-light);
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.btn-cancel,
.btn-evaluate {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  background-color: #fff;
  transition: var(--transition);
}

.btn-cancel {
  color: var(--danger-color);
  border: 1rpx solid var(--danger-color);
}

.btn-evaluate {
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
}

.btn-cancel:active,
.btn-evaluate:active {
  opacity: 0.8;
}

.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: var(--text-light);
  font-size: 26rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.error-message {
  text-align: center;
  color: var(--danger-color);
  font-size: 26rpx;
  margin-top: 20rpx;
}