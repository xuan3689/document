.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.window-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.window-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.window-name {
  font-size: 32rpx;
  font-weight: bold;
}

.window-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-open {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-closed {
  background-color: #ffebee;
  color: #f44336;
}

.queue-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.dishes-list {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.dish-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.dish-item:last-child {
  border-bottom: none;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
}

.dish-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.dish-price {
  font-size: 26rpx;
  color: #f44336;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.btn-decrease,
.btn-increase {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  background-color: #fff;
}

.quantity {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
}

.remark-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.order-summary {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-amount {
  font-size: 28rpx;
}

.amount {
  font-size: 36rpx;
  color: #f44336;
  font-weight: bold;
  margin-left: 10rpx;
}

.btn-submit {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1aad19;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.btn-submit[disabled] {
  background-color: #ccc;
}

.error-message {
  text-align: center;
  color: #f44336;
  font-size: 26rpx;
  margin-top: 20rpx;
}