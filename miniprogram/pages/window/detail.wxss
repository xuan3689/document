.container {
  padding: 0 0 20rpx 0;
  background: var(--background);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  animation: rotate 1s linear infinite;
}

.error {
  padding: 40rpx;
  text-align: center;
  color: var(--danger-color);
}

.retry-btn {
  margin-top: 20rpx;
  background: var(--primary-color);
  color: #fff;
  transition: var(--transition);
}

.window-header {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: var(--card-shadow);
}

.window-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition);
}

.window-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
}

.window-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.window-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  transition: var(--transition);
}

.status-open {
  background: var(--primary-color);
}

.status-closed {
  background: var(--text-light);
}

.info-card {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition);
}

.info-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 12rpx;
  color: var(--text-secondary);
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  transition: var(--transition);
}

.dishes-section {
  margin: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  padding-left: 20rpx;
  border-left: 8rpx solid var(--primary-color);
  color: var(--text-color);
}

.dishes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.dish-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: var(--card-shadow);
  transition: var(--transition);
}

.dish-card:active {
  transform: scale(0.98);
}

.dish-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.dish-info {
  padding: 16rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: var(--text-color);
}

.dish-price {
  color: var(--danger-color);
  font-size: 32rpx;
  font-weight: bold;
}

.dish-status {
  float: right;
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  background: var(--background);
  color: var(--text-secondary);
}