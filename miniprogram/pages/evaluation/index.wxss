.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.stats-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.average-rating {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.total-count {
  font-size: 28rpx;
  color: #666;
}

.evaluation-list {
  margin-top: 20rpx;
}

.evaluation-item {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.username {
  font-size: 28rpx;
  color: #333;
}

.rating-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating {
  color: #ff6b6b;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.evaluation-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
}

.create-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.2);
}

.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}