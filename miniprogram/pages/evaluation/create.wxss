.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.window-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dishes-summary {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.order-amount {
  color: #f44336;
  font-weight: bold;
}

.evaluation-form {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.rating-section {
  margin-bottom: 30rpx;
}

.rating-item {
  margin-bottom: 20rpx;
}

.rating-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
}

.rating-slider {
  margin: 20rpx 0;
}

.content-section {
  margin-bottom: 30rpx;
}

.content-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.images-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.remove-image {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

.submit-section {
  padding: 40rpx 0;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1aad19;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn-submit[disabled] {
  background-color: #ccc;
}

.error-message {
  text-align: center;
  color: #f44336;
  font-size: 26rpx;
  margin-top: 20rpx;
}