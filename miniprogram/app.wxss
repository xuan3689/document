page {
  --primary-color: #1aad19;
  --primary-light: #e8f5e9;
  --danger-color: #f44336;
  --text-color: #333;
  --text-secondary: #666;
  --text-light: #999;
  --background: #f5f5f5;
  --card-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  --transition: all 0.3s ease;
}

.container {
  min-height: 100vh;
  background-color: transparent;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: var(--card-shadow);
  transition: var(--transition);
}

.card:active {
  transform: scale(0.98);
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: var(--transition);
}

.btn-primary {
  background: var(--primary-color);
  color: #fff;
}

.btn-outline {
  border: 1rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn:active {
  opacity: 0.8;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty {
  text-align: center;
  padding: 60rpx 40rpx;
  color: var(--text-light);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.error {
  text-align: center;
  padding: 40rpx;
  color: var(--danger-color);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
